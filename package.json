{
  "name": "resume-extractor-backend",
  "version": "1.0.0",
  "description": "Backend for email resume extraction system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "kill": "powershell -Command \"Get-NetTCPConnection -LocalPort 5000 -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess | ForEach-Object { Stop-Process -Id $_ -Force -ErrorAction SilentlyContinue }\"",
    "restart": "npm run kill && timeout /t 2 /nobreak >nul 2>&1 && npm start",
    "test:sms": "node scripts/sms-health-check.js",
    "timezone": "node scripts/timezone-converter.js",
    "production:start": "NODE_ENV=production node scripts/production-manager.js & node server.js",
    "production:monitor": "node scripts/production-manager.js",
    "test:production": "node scripts/test-production.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/lib-storage": "^3.980.0",
    "@azure/msal-node": "^5.0.3",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "imap-simple": "^5.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.3",
    "mailparser": "^3.6.5",
    "mongoose": "^7.6.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-tnef": "^1.4.0",
    "pdf-parse": "^1.1.1",
    "pdf-to-img": "^5.0.0",
    "redis": "^4.6.12",
    "socket.io": "^4.6.1",
    "tesseract.js": "^7.0.0",
    "twilio": "^5.12.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
